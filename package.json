{
  "name": "auto-messenger",
  "version": "0.1.0",
  "repository": "https://github.com/adamhl8/auto-messenger",
  "author": "adamhl8",
  "license": "MIT",
  "exports": "./dist/index.js",
  "bin": "./dist/index.js",
  "scripts": {
    "start": "yarn build && node --enable-source-maps dist/index.js",
    "build": "tsc",
    "pkg": "yarn build && pkg . -t node16-win-x64,node16-macos-x64,node16-linux-x64 -C GZip --out-path ./pkg/",
    "lint": "xo",
    "fix": "xo --fix"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "dayjs": "^1.10.5",
    "dotenv": "^10.0.0",
    "node-cron": "^3.0.0",
    "prompts": "^2.4.1",
    "ts-messenger-api": "^1.0.3"
  },
  "devDependencies": {
    "@types/node": "^15.14.0",
    "@types/node-cron": "^2.0.3",
    "@types/prompts": "^2.0.13",
    "typescript": "^4.3.5",
    "xo": "^0.40.3",
    "yarn-upgrade-all": "^0.5.4"
  },
  "xo": {
    "semicolon": false,
    "prettier": true
  },
  "prettier": {
    "printWidth": 100
  }
}
